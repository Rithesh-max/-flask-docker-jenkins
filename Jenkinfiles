pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-login')
        DOCKER_IMAGE = "your-dockerhub-username/flask-docker-jenkins"
        CONTAINER_NAME = "flask-docker"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/<your-username>/flask-docker-jenkins.git', branch: 'main'
            }
        }

        stage('Docker Build') {
            steps {
                sh "docker build -t $DOCKER_IMAGE ."
            }
        }

        stage('Docker Push') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh "docker push $DOCKER_IMAGE"
            }
        }

        stage('Deploy') {
            steps {
                sh "docker rm -f $CONTAINER_NAME || true"
                sh "docker run -d -p 5000:5000 --name $CONTAINER_NAME $DOCKER_IMAGE"
            }
        }
    }

    post {
        always {
            sh 'docker logout || true'
        }
    }
}
